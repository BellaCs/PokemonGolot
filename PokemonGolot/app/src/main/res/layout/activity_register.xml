<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        tools:context=".CreateAnAccount">


        <TextView
            android:id="@+id/termsconditionsLabel"
            android:layout_width="238dp"
            android:layout_height="18dp"
            android:layout_marginTop="708dp"
            android:fontFamily="@font/candal"
            android:gravity="center_horizontal"
            android:text="@string/accept_conditions"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.635"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="325dp"
            android:layout_height="30dp"
            android:layout_marginTop="508dp"
            android:fontFamily="@font/candal"
            android:gravity="center_horizontal"
            android:text="@string/email"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/genderLabel"
            android:layout_width="325dp"
            android:layout_height="30dp"
            android:layout_marginTop="600dp"
            android:fontFamily="@font/candal"
            android:gravity="center_horizontal"
            android:text="Gender"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/repeatpasswordLabel"
            android:layout_width="325dp"
            android:layout_height="30dp"
            android:layout_marginTop="416dp"
            android:fontFamily="@font/candal"
            android:gravity="center_horizontal"
            android:text="@string/repeat_password"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <EditText
            android:id="@+id/passwordInsert"
            android:layout_width="321dp"
            android:layout_height="54dp"
            android:layout_marginTop="548dp"
            android:background="#FFE500"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="325dp"
            android:layout_height="30dp"
            android:layout_marginTop="328dp"
            android:fontFamily="@font/candal"
            android:gravity="center_horizontal"
            android:text="@string/password"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="325dp"
            android:layout_height="30dp"
            android:layout_marginTop="236dp"
            android:fontFamily="@font/candal"
            android:gravity="center_horizontal"
            android:text="@string/username"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/birthdateInsert"
        android:layout_width="321dp"
        android:layout_height="54dp"
        android:layout_marginTop="280dp"
        android:layout_weight="1"
        android:background="#FFE500"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nameInsert"
            android:layout_width="321dp"
            android:layout_height="54dp"
            android:layout_marginTop="364dp"
            android:layout_weight="1"
            android:background="#FFE500"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/countryLabel"
            android:layout_width="325dp"
            android:layout_height="30dp"
            android:layout_marginTop="144dp"
            android:fontFamily="@font/candal"
            android:gravity="center_horizontal"
            android:text="@string/country"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="160dp"
            android:layout_height="174dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pichu" />


        <TextView
            android:id="@+id/birthdateLabel"
            android:layout_width="325dp"
            android:layout_height="30dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/candal"
            android:gravity="center_horizontal"
            android:text="@string/date_birth"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />


        <EditText
            android:id="@+id/usernameInsert"
            android:layout_width="321dp"
            android:layout_height="54dp"
            android:layout_marginTop="456dp"
            android:background="#FFE500"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/emailInsert"
            android:layout_width="321dp"
            android:layout_height="52dp"
            android:layout_marginTop="736dp"
            android:background="#FFE500"
            android:ems="10"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/repeatpasswordInsert"
            android:layout_width="321dp"
            android:layout_height="52dp"
            android:layout_marginTop="644dp"
            android:background="#FFE500"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/createaccountButton"
            android:layout_width="271dp"
            android:layout_height="43dp"
            android:layout_marginBottom="8dp"
            android:background="#FFE500"
            android:onClick="register"
            android:text="@string/create_account"
            android:textColor="#040404"
            android:textSize="22sp"
            app:backgroundTint="#FFE500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/termsconditionsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="879dp" />

        <RadioGroup
            android:id="@+id/genderSelector"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:background="#FFE500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="829dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
